{
    "name": "typescript-backend-starter",
    "version": "1.1.0",
    "description": "Starter config and linting for typescript backend",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --target=es2022 --minify --sourcemap",
        "test": "vitest",
        "test:ci": "vitest --run",
        "start": "node dist/index.js",
        "dev:tsc": "tsc --watch --preserveWatchOutput --noEmit",
        "dev:node": "node --watch dist/index.js",
        "dev:esbuild": "pnpm run build --watch",
        "dev": "run-p dev:*"
    },
    "author": "Rogerio Romao",
    "license": "ISC",
    "devDependencies": {
        "@eslint/json": "^0.12.0",
        "@types/node": "^22.13.15",
        "esbuild": "^0.25.2",
        "eslint": "^9.28.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-sonarjs": "^2.0.4",
        "eslint-plugin-unicorn": "^59.0.1",
        "globals": "^15.14.0",
        "npm-run-all2": "^7.0.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.33.0",
        "vitest": "^1.6.0"
    },
    "dependencies": {
        "consola": "^3.4.2"
    },
    "packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf"
}

{
    "name": "typescript-starter-config-lint",
    "version": "1.0.0",
    "description": "Starter config and linting for typescript",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --fix --ext .ts src",
        "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --target=es2017 --minify --sourcemap",
        "test": "vitest",
        "test:ci": "vitest --run",
        "start": "node dist/index.js",
        "dev:tsc": "tsc --watch --preserveWatchOutput --noEmit",
        "dev:node": "node --watch dist/index.js",
        "dev:esbuild": "pnpm run build --watch",
        "dev": "run-p dev:*"
    },
    "author": "Rogerio Romao",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.8.9",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.7.5",
        "esbuild": "^0.19.5",
        "eslint": "^8.52.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-sonarjs": "^0.21.0",
        "eslint-plugin-unicorn": "^49.0.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.2.2",
        "vitest": "^0.34.6"
    }
}

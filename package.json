{
    "name": "typescript-backend-starter",
    "version": "1.1.0",
    "description": "Starter config and linting for typescript backend",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --target=es2022 --minify --sourcemap",
        "test": "vitest",
        "test:ci": "vitest --run",
        "start": "node dist/index.js",
        "dev:tsc": "tsc --watch --preserveWatchOutput --noEmit",
        "dev:node": "node --watch dist/index.js",
        "dev:esbuild": "pnpm run build --watch",
        "dev": "run-p dev:*"
    },
    "author": "Rogerio Romao",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.12.12",
        "esbuild": "^0.21.4",
        "eslint": "^9.0.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-sonarjs": "^1.0.3",
        "eslint-plugin-unicorn": "^53.0.0",
        "globals": "^15.3.0",
        "npm-run-all2": "^6.2.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^7.9.0",
        "vitest": "^1.6.0"
    },
    "dependencies": {
        "consola": "^3.2.3"
    }
}
